<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/drawer_header_background"
    android:paddingHorizontal="12dp"
    android:paddingVertical="48dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile_image_on_menu"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:civ_border_width="0.5dp"
        app:civ_border_color="#EDEDED"
        app:tint="@color/white"
        />

    <TextView
        android:id="@+id/tv_doctor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/you"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/iv_profile_image_on_menu"
        app:layout_constraintBottom_toBottomOf="@id/iv_profile_image_on_menu"
        app:layout_constraintLeft_toRightOf="@id/iv_profile_image_on_menu"
        android:layout_marginLeft="12dp"
        android:textSize="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>