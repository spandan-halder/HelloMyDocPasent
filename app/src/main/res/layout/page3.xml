<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/avater2_img"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:src="@drawable/avatar2"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/qtk_asst"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Quick Assistance"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/avater2_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/intro_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
        android:textSize="16dp"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="@+id/qtk_asst"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>