<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="92dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/appointment_type_background_normal"
    android:id="@+id/cl_root">

    <ImageView
        android:id="@+id/civ_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/mpesa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="16dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/gray"
        android:scaleType="centerInside"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mpesa"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium"
        android:textSize="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="@id/civ_icon"
        app:layout_constraintLeft_toRightOf="@id/civ_icon"
        />

    <CheckBox
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:id="@+id/cb_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:buttonTint="@color/green"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>